{
  "name": "changelog-generator",
  "version": "1.1.2",
  "private": true,
  "description": "A changelog generator to use as a Github Action or an npm module",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node .",
    "build": "tsc",
    "build:action": "ncc build src/action.ts --source-map --license licenses.txt",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "package": "yarn format && yarn lint && yarn build && yarn test && yarn build:action",
    "release:patch": "yarn package && ts-node . patch && git add . && yarn version --patch",
    "release:minor": "yarn package && ts-node . minor && git add . && yarn version --minor",
    "release:major": "yarn package && ts-node . major && git add . && yarn version --major"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jakallergis/changelog-generator.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "John A. Kallergis",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@actions/github": "^5.0.0",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.3.0",
    "@types/semver": "^7.3.6",
    "@typescript-eslint/parser": "^4.24.0",
    "@vercel/ncc": "^0.28.5",
    "eslint": "^7.26.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^4.1.0",
    "prettier": "2.3.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
