    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./bin",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "lib", "dist", "__tests__"]
}
